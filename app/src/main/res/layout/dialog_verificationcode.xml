<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_110"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_50">

        <LinearLayout
            android:id="@+id/layout_updata_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/oval_5dp_white_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_40"
                android:text="提示"
                android:textColor="@color/dynamic_music_name"
                android:textSize="@dimen/size_16" />


            <TextView
                android:visibility="gone"
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_20"
                android:gravity="center"
                android:text=""
                android:textColor="@color/diglogEdtextColor"
                android:textSize="@dimen/size_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_cout"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@color/white"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/dimen_8"
                    android:paddingRight="@dimen/dimen_8"
                    android:hint="输入手机号码"
                    android:text=""
                    android:textColorHint="@color/edtxnumberColor"
                    android:textColor="@color/color_17_text"
                    android:textSize="@dimen/size_14" />
                <LinearLayout
                    android:layout_marginLeft="@dimen/dimen_18"
                    android:layout_marginRight="@dimen/dimen_18"
                    android:background="@color/toolbar_botom_devicer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"></LinearLayout>

                <com.mxkj.yuanyintang.mainui.login_regist.EmailAutoCompleteTextView
                    android:id="@+id/et_cout_act"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@color/white"
                    android:drawablePadding="@dimen/dimen_10"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dimen_8"
                    android:paddingRight="@dimen/dimen_8"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/login_gray"
                    android:textSize="@dimen/size_12"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_code"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:inputType="number"
                        android:paddingLeft="@dimen/dimen_8"
                        android:paddingRight="@dimen/dimen_8"
                        android:hint="输入验证码"
                        android:text=""
                        android:textColorHint="@color/edtxnumberColor"
                        android:textColor="@color/color_17_text"
                        android:textSize="@dimen/size_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_20"
                        android:text="|"
                        android:textColor="@color/bckdynamic_music_item" />

                    <TextView
                        android:id="@+id/getCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_button_red"
                        android:padding="@dimen/dimen_10"
                        android:paddingRight="@dimen/dimen_10"
                        android:textColor="@color/white"
                        android:text="获取验证码"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_18"
                    android:layout_marginRight="@dimen/dimen_18"
                    android:background="@color/toolbar_botom_devicer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"></LinearLayout>

            </LinearLayout>


            <TextView
                android:visibility="gone"
                android:id="@+id/tv_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center"
                android:text=""
                android:textColor="@color/base_red"
                android:textSize="@dimen/size_11" />

            <LinearLayout
                android:id="@+id/ll_confirm_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/view_devider" />

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_confirm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_confirm_left"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dimen_10"
                        android:paddingTop="@dimen/dimen_10"
                        android:text="确认"
                        android:textColor="@color/diglogOKColor"
                        android:textSize="@dimen/size_15" />

                    <TextView
                        android:id="@+id/tv_cancle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_confirm_right"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dimen_10"
                        android:paddingTop="@dimen/dimen_10"
                        android:text="手滑了"
                        android:textColor="@color/white_text"
                        android:textSize="@dimen/size_15" />
                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/tv_confirm_oneBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_weight="1"
                android:background="@drawable/shape_button_red"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_10"
                android:paddingTop="@dimen/dimen_10"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/size_14"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:padding="@dimen/dimen_20"
            android:src="@drawable/login_close"
            android:visibility="gone" />


    </RelativeLayout>

    <ImageView
        android:layout_alignParentTop="true"
        android:id="@+id/iv_yxy"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_feedback" />

</RelativeLayout>