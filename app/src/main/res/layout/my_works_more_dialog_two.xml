<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/louyudialogbackground"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/player_all_music"
        android:background="@color/grey_e9_text"
        android:layout_width="match_parent"
        android:layout_height="80px">
        <TextView
            android:id="@+id/song_list"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_centerVertical="true"
            android:padding="@dimen/dimen_6"
            android:text="单曲"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/song_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/song_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ScrollView
        android:layout_weight="8"
        android:id="@+id/unitxinxibianji_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/editor_song_list"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_width="match_parent"
                android:layout_height="90px">
                <ImageView
                    android:id="@+id/my_works_img7"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_bianji_list_black"/>
                <TextView
                    android:layout_toRightOf="@+id/my_works_img7"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dimen_6"
                    android:text="编辑"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/l1"
                android:orientation="vertical"
                android:background="@color/grey_e9_text"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_width="match_parent"
                android:layout_height="1dp"></LinearLayout>

            <RelativeLayout
                android:id="@+id/back_song_list"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_width="match_parent"
                android:layout_height="90px">
                <ImageView
                    android:id="@+id/my_works_img8"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_back_list_black"/>
                <TextView
                    android:layout_toRightOf="@+id/my_works_img8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dimen_6"
                    android:text="撤回申请" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/l2"
                android:layout_marginLeft="@dimen/dimen_20"
                android:background="@color/grey_e9_text"
                android:layout_width="match_parent"
                android:layout_height="1dp"></LinearLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/delete_song_list"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_width="match_parent"
                android:layout_height="90px">
                <TextView
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dimen_6"
                    android:text="删除"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/cancel"
        android:background="@color/grey_e9_text"
        android:layout_width="match_parent"
        android:layout_height="80px">
        <TextView
            android:layout_centerInParent="true"
            android:padding="@dimen/dimen_6"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>