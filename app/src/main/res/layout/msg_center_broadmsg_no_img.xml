<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_to_detial"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bckdynamic_music_item"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/creat_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dimen_10"
        android:text="time"
        android:textColor="@color/login_gray"
        android:textSize="@dimen/size_11"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dimen_13">

        <TextView
            android:id="@+id/title"
            style="@style/tv_msg_center_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title" />

        <ImageView
            android:id="@+id/img_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_144"
            android:layout_marginTop="@dimen/dimen_15"
            android:src="@drawable/nothing"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/content"
            style="@style/tv_msg_center_list_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="content" />

        <LinearLayout
            android:id="@+id/ll_go"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/view_devider" />

            <TextView
                style="@style/tv_msg_center_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableRight="@drawable/to_next_layout"
                android:paddingBottom="@dimen/dimen_10"
                android:paddingTop="@dimen/dimen_15"
                android:text="查看详情"

                />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>