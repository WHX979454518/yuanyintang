<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mxkj.yuanyintang.mainui.myself.celebrity.RealInfoAuthStep1">

    <include layout="@layout/real_info_title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/type_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginRight="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_20"
                android:gravity="center_vertical"
                android:text="身份证示例"
                android:textColor="#1a1717"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginRight="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_16"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_idCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_cardEg1"
                        android:layout_width="165dp"
                        android:layout_height="108dp"
                        android:src="@drawable/card1" />

                    <TextView
                        android:id="@+id/cardeg1Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="本人手持身份证"
                        android:textColor="#616665"
                        android:textSize="@dimen/size_12" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_otherCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_cardEg2"
                        android:layout_width="165dp"
                        android:layout_height="108dp"
                        android:src="@drawable/card2" />

                    <TextView
                        android:id="@+id/cardeg2Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="身份证信息页"
                        android:textColor="#616665"
                        android:textSize="@dimen/size_12" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@color/bg_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15"
                android:drawablePadding="@dimen/dimen_5"
                android:text="本人证件照"
                android:textColor="#1a1717"
                android:textSize="@dimen/size_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginRight="@dimen/dimen_15"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_card1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_card1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_108"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:background="@drawable/add_card"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="证件照1"
                        android:textColor="#616665"
                        android:textSize="@dimen/size_12" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_card2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_card2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_108"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:background="@drawable/add_card"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="证件照2"
                        android:textColor="#616665"
                        android:textSize="@dimen/size_12" />


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@color/bg_color"
                android:lineSpacingMultiplier="1.6"
                android:paddingBottom="@dimen/dimen_20"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15"
                android:paddingTop="@dimen/dimen_20"
                android:text="●  按照示例提交证件原件或扫描件照片\n●  证件照要四角对齐、确保文字清晰、无反光无遮挡\n●  手持证件照要免冠、五官可见、完整露出耳朵、手臂"
                android:textColor="@color/color_66_text"
                android:textSize="@dimen/size_12" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>