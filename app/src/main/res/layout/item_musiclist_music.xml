<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.mxkj.yuanyintang.widget.SquareRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_music"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_defaulft" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/selector_music_button" />

        <TextView
            android:id="@+id/tv_audience_num"
            style="@style/color_white_size_10"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/dimen_5"
            android:drawableLeft="@drawable/home_icon_headphon"
            android:drawablePadding="@dimen/dimen_6"
            android:text="0" />

        <ImageView
            android:id="@+id/iv_player"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dimen_6"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_music_player_white_normal_false" />

    </com.mxkj.yuanyintang.widget.SquareRelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        style="@style/color_17_size_14"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxHeight="@dimen/dimen_56"
        android:maxLines="2"
        android:minHeight="@dimen/dimen_42"
        android:text="源音塘" />

    <TextView
        android:id="@+id/tv_company_name"
        style="@style/color_a6_size_12"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="111" />

</LinearLayout>