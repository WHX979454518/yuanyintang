<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.mxkj.yuanyintang.mainui.myself.helpcenter.ChatRobotActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_50"
        />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/dimen_10"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_question"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_weight="1"
            android:background="@drawable/selector_music_label"
            android:hint="请简短描述您遇到的问题..."
            android:paddingLeft="@dimen/dimen_10"
            android:textColorHint="@color/login_gray"
            android:textSize="@dimen/size_13" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:background="@drawable/shape_button_red"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/white" />


    </LinearLayout>

</RelativeLayout>
