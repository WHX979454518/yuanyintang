<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_135"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dimen_10">

    <android.support.v7.widget.CardView
        app:cardElevation="0dp"
        android:layout_width="@dimen/dimen_150"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/dimen_5">

        <RelativeLayout
            android:id="@+id/rlTodayRecommend"
            android:layout_width="@dimen/dimen_150"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_bck"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3000" />


            <TextView
                android:id="@+id/tv_today_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="今日推荐"
                android:textColor="@color/white"
                android:textSize="@dimen/size_17" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_today_recommend"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_5"
                android:text="RECOMMENDED DAILY"
                android:textColor="@color/white"
                android:textSize="@dimen/size_10" />

            <ImageView
                android:id="@+id/ivPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/dimen_15"
                android:src="@drawable/home_recommend_play_false"

                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_63"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/dimen_5">

            <RelativeLayout
                android:id="@+id/rl_music_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_bck_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop" />


                <TextView
                    android:id="@+id/tv_music_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="音乐分类"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_17" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_music_type"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:text="MUSIC CATEGORY"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_10" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <!--右边底部两个-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_10"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_weight="1"
                app:cardElevation="0dp"

                app:cardCornerRadius="@dimen/dimen_5">

                <RelativeLayout
                    android:id="@+id/rlChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_bck_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"

                        />


                    <TextView
                        android:id="@+id/tv_chart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="排行"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_17" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_chart"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:text="CHART"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_10" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardElevation="0dp"

                app:cardCornerRadius="@dimen/dimen_5">

                <RelativeLayout
                    android:id="@+id/rl_nearby"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_bck_near"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"

                        />


                    <TextView
                        android:id="@+id/tv_near"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="附近"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_17" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_near"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:text="NAERBY"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_10" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>