<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bckdynamic_music_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/bckdynamic_music_item"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_coutType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:text="手机号"
                android:textColor="@color/fullplayer_time"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dimen_50"
                android:drawablePadding="@dimen/dimen_10"
                android:text="-"
                android:textColor="@color/login_gray"
                android:textSize="@dimen/size_14"

                />

        </LinearLayout>

        <View
            style="@style/view_line_h"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10"
                android:text="验证码"
                android:textColor="@color/fullplayer_time"
                android:textSize="@dimen/size_14" />

            <EditText
                android:id="@+id/et_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_50"
                android:layout_toRightOf="@+id/t"
                android:background="@color/white"
                android:drawablePadding="@dimen/dimen_10"
                android:hint="输入验证码"
                android:inputType="number"
                android:textColor="@color/delectColor"
                android:textColorHint="@color/titleColor"
                android:textSize="@dimen/size_13" />

            <TextView
                android:id="@+id/tv_reget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:drawablePadding="@dimen/dimen_10"
                android:paddingRight="@dimen/dimen_10"
                android:text="获取验证码"
                android:textColor="@color/base_red"
                android:textSize="@dimen/size_12" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10"
                android:text="新密码"
                android:textColor="@color/fullplayer_time"
                android:textSize="@dimen/size_14" />

            <EditText
                android:id="@+id/et_pwd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_50"
                android:layout_toRightOf="@+id/t2"
                android:background="@color/white"
                android:drawablePadding="@dimen/dimen_10"
                android:hint="6~16位数字、字母、符号"
                android:inputType="textPassword"
                android:textColor="@color/delectColor"
                android:textColorHint="@color/titleColor"
                android:textSize="@dimen/size_13" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10"
                android:text="确认密码"
                android:textColor="@color/fullplayer_time"
                android:textSize="@dimen/size_14" />

            <EditText
                android:id="@+id/et_pwd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_50"
                android:layout_toRightOf="@+id/t3"
                android:background="@color/white"
                android:drawablePadding="@dimen/dimen_10"
                android:hint="再次输入密码"
                android:inputType="textPassword"
                android:textColor="@color/delectColor"
                android:textColorHint="@color/titleColor"
                android:textSize="@dimen/size_13" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_byEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机不在身边,"
            android:textColor="#6a6661"
            android:textSize="@dimen/sp_12"

            />

        <TextView
            android:id="@+id/ByEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10"
            android:text="邮箱验证"
            android:textColor="@color/base_red"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
</RelativeLayout>