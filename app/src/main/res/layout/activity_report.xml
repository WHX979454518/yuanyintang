<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/dimen_200"
        android:layout_height="@dimen/dimen_110"
        android:layout_marginTop="@dimen/dimen_60"
        android:src="@drawable/bg_report_img" />

    <EditText
        android:id="@+id/et_report_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:background="@drawable/oval_5dp_transparent_bg_line"
        android:gravity="top"
        android:hint="请详细说明举报的原因，帮助小伊处理哦~"
        android:maxLength="200"
        android:minHeight="@dimen/dimen_180"
        android:paddingBottom="@dimen/dimen_14"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_10"
        android:paddingTop="@dimen/dimen_14"
        android:textColor="@color/color_17_text"
        android:textColorHint="@color/grey_a6_text"
        android:textSize="@dimen/size_12" />


</LinearLayout>