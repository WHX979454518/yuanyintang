<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.mxkj.yuanyintang.mainui.login_regist.HotUserRecommend">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_follow_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10"
            android:text="一键关注"
            android:textColor="#616665"
            android:textSize="@dimen/size_13"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_10"
            android:layout_weight="1"
            android:background="@drawable/oval_25dp_red_66_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_7"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/dimen_10"
            android:paddingTop="@dimen/dimen_7"
            android:text="立即进入"
            android:textColor="@color/white"

            />

    </LinearLayout>


</LinearLayout>
