<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_to_commentdetial"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bckdynamic_music_item"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_10"
    android:paddingLeft="@dimen/dimen_10"
    android:paddingRight="@dimen/dimen_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_12"
        android:layout_toLeftOf="@+id/rl_icon"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="源音塘"
            android:textSize="@dimen/size_12" />

        <TextView
            android:id="@+id/dele_my_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_toLeftOf="@+id/nickname"
            android:text="删除"
            android:textColor="#9da6a5"
            android:textSize="@dimen/size_12" />

        <LinearLayout
            android:id="@+id/ll_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_agree_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="0"
                android:textColor="@color/grey_a6_text"
                android:textSize="11sp"
                tools:ignore="RtlHardcoded" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_1"
                    android:padding="@dimen/dimen_5"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_chitang_zan_gray" />

                <ImageView
                    android:id="@+id/ani_agree"
                    android:visibility="invisible"
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ani_comment_agree" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_comment_item_more_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_5"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/comment_item_more_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/comment_item_more" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_32"
        android:background="@drawable/oval_5dp_white_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comment_createtime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_40"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_8"
                android:layout_weight="1"
                android:gravity="right"
                android:text="time"
                android:textColor="@color/grey_a6_text"
                android:textSize="@dimen/size_10" />

            <TextView
                android:id="@+id/comment_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_42"
                android:layout_marginTop="@dimen/dimen_8"
                android:gravity="right"
                android:text=""
                android:textColor="@color/grey_a6_text"
                android:textSize="@dimen/size_10" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_15"
            android:text="comment_content"
            android:textColor="@color/dynamic_content"
            android:textSize="@dimen/size_12" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_icon"
        android:layout_width="@dimen/dimen_35"
        android:layout_height="@dimen/dimen_35"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dimen_10"
        tools:ignore="RtlHardcoded">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/default_head_img"
            android:clickable="true" />

        <ImageView
            android:id="@+id/img_v_renzheng"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_headimg_vip"

            tools:ignore="RtlHardcoded" />
    </RelativeLayout>

</RelativeLayout>