<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_200"
        android:paddingTop="@dimen/dimen_16">

        <TextView
            style="@style/color_66_size_14"
            android:layout_marginTop="@dimen/dimen_15"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            android:text="基本信息" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_10"
                android:paddingRight="@dimen/dimen_10">

                <RelativeLayout
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    >

                    <TextView
                        android:textColor="@color/basictexColor"
                        android:id="@+id/tv_sss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别" />

                    <TextView
                        android:textColor="@color/basictexColor"
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:layout_toRightOf="@+id/tv_sss"
                        android:text="" />


                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:text="|" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:textColor="@color/basictexColor"
                        android:id="@+id/tv_agee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:layout_weight="1"
                        android:text="年龄" />

                    <TextView
                        android:textColor="@color/basictexColor"
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:layout_toRightOf="@+id/tv_agee"
                        android:layout_weight="1"
                        android:text="" />


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="@dimen/dimen_10"
                android:paddingLeft="@dimen/dimen_10">

                <RelativeLayout
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:textColor="@color/basictexColor"
                        android:id="@+id/tv_xingzuos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:layout_weight="1"
                        android:text="星座" />

                    <TextView
                        android:textColor="@color/basictexColor"
                        android:id="@+id/tv_xingzuo"
                        android:layout_toRightOf="@+id/tv_xingzuos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:text="" />


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:text="|" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:textColor="@color/basictexColor"
                        android:id="@+id/tv_addresss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="所在地" />

                    <TextView
                        android:textColor="@color/basictexColor"
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:layout_weight="1"
                        android:layout_toRightOf="@+id/tv_addresss"
                        android:singleLine="true"
                        android:text="" />


                </RelativeLayout>




            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_self_link"
                style="@style/color_66_size_14"
                android:text="个人链接：  " />

            <ImageView
                android:id="@+id/iv_sina"
                android:layout_width="@dimen/dimen_21"
                android:layout_height="@dimen/dimen_21"
                android:layout_marginRight="@dimen/dimen_8"
                android:src="@drawable/icon_click_sina"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_wechat"
                android:layout_width="@dimen/dimen_21"
                android:layout_height="@dimen/dimen_21"
                android:layout_marginRight="@dimen/dimen_8"
                android:src="@drawable/icon_click_wechat"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_qq"
                android:layout_width="@dimen/dimen_21"
                android:layout_height="@dimen/dimen_21"
                android:src="@drawable/icon_click_qq"
                android:visibility="gone" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="#f5f7fa"

            />
        <!--个人简介-->
        <TextView
            style="@style/color_17_size_15"
            android:layout_marginTop="@dimen/dimen_20"
            android:drawablePadding="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            android:text="个人简介" />

        <TextView
            android:id="@+id/tv_synopsis"
            style="@style/color_66_size_14"
            android:layout_marginTop="@dimen/dimen_16"
            android:hint="这个人很懒，什么都没有留下"
            android:lineSpacingMultiplier="1.2"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            android:text=""
            android:textColorHint="@color/delectColor" />

        <TextView
            android:id="@+id/tv_d1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="#f5f7fa" />

        <TextView
            android:id="@+id/tl"
            style="@style/color_17_size_15"
            android:layout_marginTop="@dimen/dimen_20"
            android:drawablePadding="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            android:text="感兴趣的" />

        <com.mxkj.yuanyintang.widget.MultiLineRadioGroup
            android:id="@+id/likeTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15"
            app:child_layout="@layout/musician_tag"
            app:child_margin_horizontal="@dimen/dimen_10"
            app:child_margin_vertical="@dimen/dimen_10"
            app:single_choice="false" />

        <TextView
            android:id="@+id/tv_d2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="#f5f7fa" />

        <TextView
            android:id="@+id/ht"
            style="@style/color_17_size_15"
            android:layout_marginTop="@dimen/dimen_20"
            android:drawablePadding="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            android:text="TA的标签" />

        <com.mxkj.yuanyintang.widget.MultiLineRadioGroup
            android:id="@+id/musicianTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15"
            app:child_layout="@layout/musician_tag"
            app:child_margin_horizontal="@dimen/dimen_10"
            app:child_margin_vertical="@dimen/dimen_10"
            app:single_choice="false" />


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>