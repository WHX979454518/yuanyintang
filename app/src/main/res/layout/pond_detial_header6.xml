<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10"
        android:background="@color/bg_pond_divcolor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_below="@+id/hot_comments"
            android:layout_width="@dimen/dimen_45"
            android:layout_height="@dimen/dimen_5"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="@dimen/dimen_20"
            android:src="@drawable/shape_txt_underline" />
        <TextView
            android:id="@+id/hot_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            android:paddingTop="@dimen/dimen_12"
            android:text="热门评论"
            android:textColor="@color/text_color"
            android:textSize="@dimen/size_14" />
        <!--android:background="@color/bg_color"-->
    </RelativeLayout>


    <com.mxkj.yuanyintang.utils.photopicker.widget.NoScrollRecyclerView
        android:id="@+id/recycler_hotComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dividing_line_color" />

</LinearLayout>