<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_item"
    android:background="@color/transparent" >

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/classification_image"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/classification_name"
            android:text=""
            android:textSize="@dimen/size_14"
            android:textColor="@color/dynamic_music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_toRightOf="@+id/classification_image"
            android:maxLines="2"
            android:gravity="center" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_below="@+id/rl"
        android:background="@color/toolbar_botom_devicer"
        android:layout_width="match_parent"
        android:layout_height="1dp"></LinearLayout>


</RelativeLayout>