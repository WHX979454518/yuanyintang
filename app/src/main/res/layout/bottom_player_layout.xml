<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bottom_pl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white_text"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_pause_botom"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            tools:ignore="RtlHardcoded"/>

        <RelativeLayout
            android:id="@+id/rl_start_fullplayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            tools:ignore="RtlHardcoded">

            <LinearLayout
                android:id="@+id/play_botom"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:layout_toLeftOf="@+id/playnext_bottom"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/zanting_zhishi"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_launcher"
                    />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/playnext_bottom"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:clickable="true"
                android:gravity="center_vertical"
                tools:ignore="RtlHardcoded">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_launcher"/>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded">

                <TextView
                    android:id="@+id/tv_botom_songname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxEms="8"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/tv_singer_botom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    />

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        style="@style/mProgress_horizontal"
        />

</LinearLayout>
