<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_12"
        android:paddingRight="@dimen/dimen_12"
        android:paddingTop="@dimen/dimen_20">

        <RelativeLayout
            android:layout_width="@dimen/dimen_45"
            android:layout_height="@dimen/dimen_45">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_headimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/default_head_img"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/dividing_line_color"
                app:civ_border_width="@dimen/base_line" />

            <ImageView
                android:id="@+id/iv_is_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_headimg_vip_small"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/color_17_size_14"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="源音塘" />

                <ImageView
                    android:id="@+id/iv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_6"
                    android:background="@drawable/oval_3dp_blue_60_bg"
                    android:paddingBottom="@dimen/dimen_3"
                    android:paddingLeft="@dimen/dimen_4"
                    android:paddingRight="@dimen/dimen_4"
                    android:paddingTop="@dimen/dimen_3"
                    android:src="@drawable/icon_male" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_sign"
                style="@style/color_a6_size_12"
                android:layout_marginTop="@dimen/dimen_11"
                android:ellipsize="end"
                android:hint="这个人好懒哦，什么都没有留下"
                android:maxLines="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_distance"
                style="@style/color_a6_size_10"
                android:text="0km" />

            <TextView
                android:id="@+id/tv_private"
                style="@style/color_4c_size_11"
                android:layout_marginTop="@dimen/dimen_12"
                android:background="@drawable/oval_25dp_transparent_bg_4c_line"
                android:gravity="center"
                android:maxWidth="@dimen/dimen_65"
                android:minWidth="@dimen/dimen_56"
                android:paddingBottom="@dimen/dimen_6"
                android:paddingTop="@dimen/dimen_6"
                android:text="私信TA" />

        </LinearLayout>

    </LinearLayout>


    <View
        style="@style/view_line_h"
        android:layout_marginLeft="@dimen/dimen_70"
        android:layout_marginTop="@dimen/dimen_16" />

</LinearLayout>