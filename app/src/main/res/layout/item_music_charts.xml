<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_to_detial"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dimen_10"
    android:layout_marginTop="@dimen/dimen_5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_81"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/text_color"
                android:gravity="center_horizontal"
                android:textSize="@dimen/textSize_20"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:gravity="center_horizontal"
                android:src="@drawable/charts_order_normal"

                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/dimen_65"
            android:layout_height="@dimen/dimen_65"
            android:layout_marginLeft="@dimen/dimen_5"
            android:background="@drawable/charts_shape_bck_music_rl">

            <ImageView
                android:id="@+id/iv_music_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/nothing" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/charts_shape_bck_music_img" />

            <ImageView
                android:id="@+id/iv_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/charts_shape_bck_music_rl"
                android:clickable="true"
                android:padding="@dimen/dimen_10"
                android:src="@drawable/icon_music_player_white_normal_false" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_title"
                style="@style/color_17_size_14"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/dimen_10"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="源音塘" />

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="@dimen/dimen_20"
                android:singleLine="true"
                android:text="作者" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dimen_70"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/dimen_15"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="综合评分"
                android:textColor="@color/login_gray" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="@dimen/dimen_10"
                android:singleLine="true"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/base_red"
                android:textStyle="bold" />

        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dimen_110"
        android:background="@color/bg_color" />

</LinearLayout>