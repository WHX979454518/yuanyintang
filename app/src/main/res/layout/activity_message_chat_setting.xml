<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_10">

        <com.suke.widget.SwitchButton
            android:id="@+id/stick_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:sb_border_width="@dimen/dimen_1"
            app:sb_checked="false"
            app:sb_checked_color="@color/base_red"
            app:sb_shadow_effect="true"
            app:sb_shadow_offset="@dimen/dimen_2"
            app:sb_show_indicator="false"
            app:sb_uncheck_color="@color/dividing_line_color" />

        <TextView
            style="@style/color_17_size_14"
            android:layout_centerVertical="true"
            android:text="置顶聊天" />


    </RelativeLayout>

    <View style="@style/view_line_h" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_10">

        <com.suke.widget.SwitchButton
            android:id="@+id/not_disturb_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:sb_border_width="@dimen/dimen_1"
            app:sb_checked="false"
            app:sb_checked_color="@color/base_red"
            app:sb_shadow_effect="true"
            app:sb_shadow_offset="@dimen/dimen_2"
            app:sb_show_indicator="false"
            app:sb_uncheck_color="@color/dividing_line_color" />

        <TextView
            style="@style/color_17_size_14"
            android:layout_centerVertical="true"
            android:text="消息免打扰" />


    </RelativeLayout>

    <View style="@style/view_line_h" />

    <TextView
        android:id="@+id/tv_clear_msg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_10"
        android:text="清空消息"
        android:textColor="@color/color_17_text"
        android:textSize="@dimen/size_14" />

    <TextView
        android:id="@+id/tv_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/white"
        android:drawableRight="@drawable/icon_arrow_right_grey"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_10"
        android:text="投诉"
        android:textColor="@color/color_17_text"
        android:textSize="@dimen/size_14" />

</LinearLayout>