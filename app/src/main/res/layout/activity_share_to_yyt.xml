<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.mxkj.yuanyintang.base.share.ShareToYYT">

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="top"
        android:hint="说点什么吧~"
        android:minHeight="150dp"
        android:paddingLeft="10dp"
        android:paddingTop="@dimen/dimen_10"
        android:textColor="@color/black"
        android:textColorHint="@color/login_gray"
        android:textSize="@dimen/size_15"

        />

    <LinearLayout
        android:id="@+id/ll_music"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/bckdynamic_music_item"
        android:clickable="true"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:ignore="RtlHardcoded">

        <ImageView
            android:id="@+id/img_song"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_5"
            android:scaleType="centerCrop"
            android:src="@drawable/nothing"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_dynamic_music_type"
                    android:gravity="center"
                    android:padding="@dimen/dimen_2"
                    android:text="单曲"
                    android:textColor="@color/base_red"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_songName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/dynamic_music_name"
                    android:textSize="@dimen/size_12" />
            </LinearLayout>


            <TextView
                android:id="@+id/singer_song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:singleLine="true"
                android:text="--"
                android:textColor="@color/dynamic_singer_name"
                android:textSize="11sp" />


        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/forwar_mv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:padding="@dimen/dimen_10"
            android:src="@drawable/icon_index_list_mv" />

        <ImageView
            android:id="@+id/img_playmusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:padding="@dimen/dimen_10"
            android:src="@drawable/dynamic_unplaying" />

    </LinearLayout>


    <ImageView
        android:id="@+id/img_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:src="@drawable/nothing"
        android:visibility="gone" />


</LinearLayout>
