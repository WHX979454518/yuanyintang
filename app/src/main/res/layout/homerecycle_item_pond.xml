<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_16"
    android:paddingLeft="@dimen/dimen_10"
    android:paddingRight="@dimen/dimen_10">

    <LinearLayout
        android:id="@+id/layout_cate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_cate_img"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_8" />

        <TextView
            android:id="@+id/tv_pond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/home_index_more"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dimen_16"
            android:text="热门池塘"
            android:textColor="@color/color_17_text"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_14">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                style="@style/color_17_size_14"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="标标题标题标题标题标题标题标题标题标题标题标题标题标题标题题" />

            <LinearLayout
                android:id="@+id/layout_tabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_12"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_label_one"
                    style="@style/color_a6_size_10"
                    android:background="@drawable/oval_5dp_coloreb_bg"
                    android:ellipsize="end"
                    android:maxEms="9"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/dimen_8"
                    android:paddingLeft="@dimen/dimen_9"
                    android:paddingRight="@dimen/dimen_9"
                    android:paddingTop="@dimen/dimen_8"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_label_two"
                    style="@style/color_a6_size_10"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:background="@drawable/oval_5dp_coloreb_bg"
                    android:ellipsize="end"
                    android:maxEms="9"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/dimen_8"
                    android:paddingLeft="@dimen/dimen_9"
                    android:paddingRight="@dimen/dimen_9"
                    android:paddingTop="@dimen/dimen_8"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_label_three"
                    style="@style/color_a6_size_10"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:background="@drawable/oval_5dp_coloreb_bg"
                    android:ellipsize="end"
                    android:maxEms="9"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/dimen_8"
                    android:paddingLeft="@dimen/dimen_9"
                    android:paddingRight="@dimen/dimen_9"
                    android:paddingTop="@dimen/dimen_8"
                    android:text="" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:overScrollMode="never"
                android:scrollbars="none" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/layout_to_musician"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/dimen_25"
                        android:layout_height="@dimen/dimen_25">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/cimg_head"
                            android:layout_width="@dimen/dimen_25"
                            android:layout_height="@dimen/dimen_25" />

                        <ImageView
                            android:id="@+id/iv_is_vip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/icon_headimg_vip_small"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_6"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="名字"
                        android:textColor="@color/grey_a6_text"
                        android:textSize="@dimen/size_12" />

                    <TextView
                        android:id="@+id/tv_read_num"
                        style="@style/color_a6_size_11"
                        android:drawableLeft="@drawable/icon_read"
                        android:drawablePadding="@dimen/dimen_6"
                        android:text="0" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_alone_img"
            android:layout_width="@dimen/dimen_115"
            android:layout_height="@dimen/dimen_115"
            android:layout_marginLeft="@dimen/dimen_10"
            android:background="@color/bg_color"
            android:scaleType="centerCrop" />

    </LinearLayout>


</LinearLayout>