<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_click"
    android:layout_width="@dimen/dimen_115"
    android:layout_height="@dimen/dimen_90"
    android:layout_marginLeft="5dp"
    android:background="@color/transparent">

    <ImageView
        android:id="@+id/iv_charts_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/charts_bck"

        />

    <RelativeLayout
        android:id="@+id/rl_music_bck"
        android:layout_width="@dimen/dimen_38"
        android:layout_height="@dimen/dimen_38"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/dimen_10"
        android:background="@drawable/shape_charts"
        android:padding="@dimen/dimen_1"
        >


        <ImageView
            android:id="@+id/iv_charts_bck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="@dimen/dimen_1"
            android:scaleType="fitXY"
            android:src="@drawable/charts_bck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3000"

            />

        <ImageView
            android:id="@+id/iv_player"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_music_player_white_big_false"

            />
    </RelativeLayout>

</RelativeLayout>