<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  android:orientation="vertical"
    android:background="@color/white"

    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_12"
        android:paddingRight="@dimen/dimen_12"
        android:paddingTop="@dimen/dimen_20">

    <RelativeLayout
        android:layout_width="@dimen/dimen_45"
        android:layout_height="@dimen/dimen_45">

        <ImageView
            android:id="@+id/circle_msg_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/default_head_img"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:id="@+id/iv_is_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_headimg_vip_small"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_12"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                style="@style/color_17_size_14"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="源音塘" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_6"
                android:text="1分钟前"
                android:textColor="@color/login_gray" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_event"
            style="@style/color_a6_size_12"
            android:layout_marginTop="@dimen/dimen_5"
            android:ellipsize="end"
            android:hint="tv_event"
            android:maxLines="1" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/dimen_60"
        android:layout_height="@dimen/dimen_60">

        <TextView
            android:id="@+id/tv_item"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            android:ellipsize="end"
            android:text=""
            android:textColor="@color/fullplayer_time"
            android:textSize="@dimen/size_12" />

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            android:src="@drawable/nothing"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_height="0.5dp"
        android:background="#ebebeb">

    </TextView></LinearLayout>


