<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_50">

        <LinearLayout
            android:id="@+id/layout_updata_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:background="@drawable/oval_5dp_white_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_22"
                android:text="赠送确认"
                android:textColor="@color/color_17_text"
                android:textSize="@dimen/size_15" />


            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:gravity="center"
                android:text=""
                android:textColor="@color/fullplayer_time"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/ll_give_gift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/nothing"
                android:gravity="center"
                android:orientation="horizontal"
                android:text="礼物名称"

                >

                <ImageView
                    android:id="@+id/img_gift"
                    android:layout_width="52dp"
                    android:layout_height="54dp"
                    android:src="@drawable/nothing" />

                <TextView
                    android:id="@+id/tv_gift_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:gravity="center"
                    android:text="礼物名称"

                    />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_recharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/nothing"
                android:gravity="center"
                android:orientation="horizontal"
                android:text="礼物名称"

                >

                <TextView
                    android:id="@+id/tv_old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:gravity="center"
                    android:text="0"

                    />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/base_red"

                    />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center"
                android:text=""
                android:textColor="@color/base_red"
                android:textSize="@dimen/size_11" />
            <TextView
                android:id="@+id/tv_pay"
                android:visibility="gone"
                android:padding="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center"
                android:text="使用支付宝支付"
                android:drawablePadding="@dimen/dimen_5"
                android:drawableRight="@drawable/to_next_red"
                android:textColor="@color/base_red"
                android:textSize="@dimen/size_11" />

            <LinearLayout
                android:id="@+id/ll_confirm_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/view_devider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_cancle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_confirm_left"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dimen_10"
                        android:paddingTop="@dimen/dimen_10"
                        android:text="取消"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/size_14" />

                    <TextView
                        android:id="@+id/tv_confirm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_confirm_right"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dimen_10"
                        android:paddingTop="@dimen/dimen_10"
                        android:text="确定"
                        android:textColor="@color/white_text"
                        android:textSize="@dimen/size_14" />
                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/tv_confirm_oneBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_20"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:layout_weight="1"
                android:background="@drawable/shape_button_red"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_10"
                android:paddingTop="@dimen/dimen_10"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/size_14"
                android:visibility="gone" />

        </LinearLayout>


        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:padding="@dimen/dimen_20"
            android:src="@drawable/login_close"
            android:visibility="gone" />


    </RelativeLayout>
</RelativeLayout>