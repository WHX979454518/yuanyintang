<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_125"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_chaegr_newitem_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginBottom="@dimen/dimen_5"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/dimen_5">
            <ImageView
                android:id="@+id/chaegr_newitem_img"
                android:layout_width="@dimen/dimen_115"
                android:layout_height="@dimen/dimen_115" />
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:orientation="vertical"
            android:layout_toRightOf="@+id/card_chaegr_newitem_img"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_width="208dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/chargr_name"
                android:layout_marginTop="@dimen/dimen_10"
                android:text=""
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/size_18"/>

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_5"
                android:orientation="vertical"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <ImageView
                        android:id="@+id/icon_value_first"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_value_first"
                        android:layout_width="@dimen/dimen_18"
                        android:layout_height="@dimen/dimen_22" />
                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/icon_value_first_name"
                        android:layout_toRightOf="@+id/icon_value_first"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <ImageView
                        android:id="@+id/icon_value_second"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_value_second"
                        android:layout_width="@dimen/dimen_18"
                        android:layout_height="@dimen/dimen_22" />
                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/icon_value_second_name"
                        android:layout_toRightOf="@+id/icon_value_second"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_marginBottom="@dimen/dimen_13"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <ImageView
                        android:id="@+id/icon_value_third"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_value_third"
                        android:layout_width="@dimen/dimen_18"
                        android:layout_height="@dimen/dimen_22" />
                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/icon_value_third_name"
                        android:layout_toRightOf="@+id/icon_value_third"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_chart_more"
            android:layout_width="@dimen/dimen_7"
            android:layout_height="@dimen/dimen_13" />

    </RelativeLayout>



</RelativeLayout>