<?xml version="1.0" encoding="utf-8"?>
<com.mxkj.yuanyintang.widget.NavigationBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigationBar"
    style="@style/NavigationBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:minHeight="@dimen/dimen_48">

    <Button
        android:id="@+id/leftButton"
        style="@style/BarButton"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_weight="0"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/icon_back_black"
        android:drawablePadding="@dimen/dimen_2"
        android:gravity="left|center_vertical"
        android:textColor="@color/white"
        android:textSize="@dimen/size_14"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/headerViewGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/navTitleTextView"
            style="@style/BarTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxEms="9"
            android:scrollHorizontally="true"
            android:singleLine="true" />
        <!--android:textStyle="bold"-->
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_weight="0"
        android:gravity="right|center_vertical">

        <Button
            android:id="@+id/rightButton"
            style="@style/BarButton"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:textAllCaps="false"
            android:textColor="@color/base_red"
            android:textSize="@dimen/size_14"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="@dimen/dimen_6"
            android:layout_height="@dimen/dimen_6"
            android:layout_gravity="right|top"
            android:layout_marginTop="4dp"
            android:background="@drawable/oval_5dp_red_bg"
            android:visibility="gone" />
    </FrameLayout>

</com.mxkj.yuanyintang.widget.NavigationBar>