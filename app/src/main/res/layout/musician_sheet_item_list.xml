<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_5"
    android:layout_marginTop="@dimen/dimen_5"
    app:cardCornerRadius="@dimen/dimen_10"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/llItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_click"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="68dp"
                android:layout_height="wrap_content">

                <com.mxkj.yuanyintang.widget.SquareRelativeLayout
                    android:id="@+id/layout_music_cover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_1">

                    <com.mxkj.yuanyintang.mainui.newapp.weidget.RoundCornorImageView
                        android:id="@+id/cimg_cover"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_mine_ilike_moren3" />
                    <ImageView
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:id="@+id/cimg_cover_love"
                        android:layout_width="25dp"
                        android:layout_height="23dp"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/private_img"
                        android:layout_width="64px"
                        android:layout_height="64px"
                        android:layout_alignBottom="@+id/cimg_cover"
                        android:layout_alignRight="@+id/cimg_cover"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/song_sheet_right" />

                </com.mxkj.yuanyintang.widget.SquareRelativeLayout>


            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_weight="7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_music_name"
                    style="@style/color_33_size_14"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="源音塘" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_num"
                        style="@style/color_99_size_12"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="-" />

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/music_more"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_index_list_more">
                </ImageView>
                <!--android:layout_marginTop="@dimen/dimen_42"-->
                <!--android:layout_marginBottom="@dimen/dimen_15"-->
            </RelativeLayout>

        </LinearLayout>

        <View
            style="@style/view_line_h"
            android:layout_marginLeft="@dimen/dimen_80" />

    </LinearLayout>
</android.support.v7.widget.CardView>