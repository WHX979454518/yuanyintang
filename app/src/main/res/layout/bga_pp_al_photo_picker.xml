<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_photo_picker_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dimen_50"
            android:maxEms="7"
            android:paddingRight="@dimen/bga_pp_size_level1"
            android:singleLine="true"
            android:textColor="@color/delectColor"
            android:textSize="@dimen/size_14"
            tools:background="@color/white"
            tools:text="一二三四五六七八九十一二三" />

        <ImageView
            android:id="@+id/iv_photo_picker_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_toRightOf="@+id/tv_photo_picker_title"
            android:src="@drawable/full_playing_finish" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_photo_picker_submit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_gravity="left"
        android:layout_margin="@dimen/bga_pp_size_level2"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center_vertical"
        android:minWidth="80dp"
        android:paddingLeft="@dimen/bga_pp_size_level2"
        android:paddingRight="@dimen/bga_pp_size_level2"
        android:singleLine="true"
        android:text="@string/bga_pp_confirm"
        android:textColor="@color/gray_normal"
        android:visibility="gone" />


</RelativeLayout>