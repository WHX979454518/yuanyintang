<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_to"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_15">

    <include layout="@layout/pond_comment_common" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_57"
        android:layout_marginTop="@dimen/dimen_15">

        <LinearLayout
            android:id="@+id/ll_music"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dimen_10"
            android:background="@drawable/hot_music_bg"
            android:clickable="true"
            android:orientation="horizontal"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/img_song"
                android:layout_width="@dimen/dimen_55"
                android:layout_height="@dimen/dimen_55"
                android:layout_gravity="center_vertical"
                android:src="@drawable/nothing"
                tools:ignore="RtlHardcoded" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    <TextView
                        android:id="@+id/item_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_dynamic_music_type"
                        android:gravity="center"
                        android:padding="@dimen/dimen_2"
                        android:text="单曲"
                        android:textColor="@color/base_red"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_songName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="-"
                        android:textColor="@color/dynamic_music_name"
                        android:textSize="@dimen/size_12" />
                </LinearLayout>


                <TextView
                    android:id="@+id/singer_song"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@color/dynamic_singer_name"
                    android:textSize="11sp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/img_playmusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:padding="@dimen/dimen_10"
                android:src="@drawable/dynamic_unplaying" />

        </LinearLayout>


    </RelativeLayout>

    <include layout="@layout/pond_comment_common_son" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginLeft="@dimen/dimen_57"
        android:background="@color/toolbar_botom_devicer" />

</LinearLayout>