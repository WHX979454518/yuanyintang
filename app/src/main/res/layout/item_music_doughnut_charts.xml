<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_to_detial"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dimen_10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginRight="@dimen/dimen_10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textSize="@dimen/textSize_20"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/dimen_65"
            android:layout_height="@dimen/dimen_65"
            android:background="@drawable/charts_shape_bck_music_rl"
            >

            <ImageView
                android:id="@+id/iv_music_bg"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                android:background="@drawable/charts_shape_bck_music_rl"
                android:scaleType="centerCrop"
                android:src="@mipmap/img_defaut_head" />

            <TextView
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                android:background="@drawable/charts_shape_bck_music_img"
                />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:padding="@dimen/dimen_10"
                android:src="@drawable/icon_music_player_white_normal_false" />


        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_title"
                style="@style/color_17_size_14"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/dimen_10"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="源音塘" />

            <TextView
                android:id="@+id/tv_day_dough"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/dimen_15"
                android:maxLines="1"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="源音塘"
                android:textColor="#9da6a4"
                android:textSize="@dimen/size_12"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/support_him"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/dimen_15"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="冲榜"
                android:layout_width="@dimen/dimen_45"
                android:layout_height="@dimen/dimen_25"
                android:gravity="center"
                android:textColor="@color/base_red"
                android:background="@drawable/shape_button_up_bill"/>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginLeft="@dimen/dimen_120"
        >

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#616665"

            android:textSize="@dimen/size_13"
            android:text="日甜甜圈：0"

            />

        <TextView
            android:id="@+id/tv_user_couts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="快来给TA冲榜吧"
            android:gravity="right"
            android:textColor="#616665"
            android:textSize="@dimen/size_13"

            />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_color"
        android:layout_marginLeft="@dimen/dimen_110"
        />


</LinearLayout>