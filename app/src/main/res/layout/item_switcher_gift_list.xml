<?xml version="1.0" encoding="utf-8"?><!--2-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_10"
    android:layout_marginTop="@dimen/dimen_10"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="@dimen/dimen_35"
        android:layout_height="@dimen/dimen_35"
        android:text=""
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textSize="@dimen/size_16"

        />

    <ImageView
        android:visibility="gone"
        android:id="@+id/img_position"
        android:layout_width="@dimen/dimen_35"
        android:layout_height="@dimen/dimen_35"
        android:gravity="center"
        android:text=""
        android:textColor="@color/text_color"
        android:textSize="@dimen/size_16"

        />

    <RelativeLayout
        android:id="@+id/rl_icon"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_40"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/default_head_img"
            android:clickable="true"
            android:src="@drawable/nothing" />

        <ImageView
            android:id="@+id/v_rz"
            android:layout_width="@dimen/dimen_13"
            android:layout_height="@dimen/dimen_13"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_headimg_vip_small" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_10">

        <TextView
            android:id="@+id/nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="源音塘"
            android:textColor="#1a1717"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:singleLine="true"
            android:text="甜甜圈"
            android:textColor="#9da6a4"
            android:textSize="@dimen/size_12" />


    </LinearLayout>
</LinearLayout>
