<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dimen_40"
        android:background="@drawable/shape_button"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/dimen_20"
                android:text="验证身份"
                android:textColor="@color/color_14_text"
                android:textSize="@dimen/size_16"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dimen_28"
                android:layout_marginRight="@dimen/dimen_28"
                android:background="@color/white"
                android:gravity="center"
                android:hint="为了您的账户安全"
                android:textColorHint="@color/dynamic_nick_nosex"
                android:inputType="number"
                android:textColor="#616665"
                android:textSize="@dimen/size_13" />

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dimen_28"
                android:layout_marginRight="@dimen/dimen_28"
                android:background="@color/white"
                android:gravity="center"
                android:hint=""
                android:textColorHint="@color/dynamic_nick_nosex"
                android:inputType="number"
                android:textColor="#616665"
                android:textSize="@dimen/size_13" />


            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_15"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="0dp"
                    android:inputType="number"
                    android:layout_height="@dimen/dimen_35"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@drawable/shape_msg_et"
                    android:gravity="center_vertical"
                    android:hint="输入验证码"
                    android:paddingLeft="@dimen/dimen_10"
                    android:textColorHint="@color/login_gray"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:id="@+id/tv_reget"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_35"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:background="@drawable/shape_button_red"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_10"
                    android:paddingRight="@dimen/dimen_15"
                    android:text="发送"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_14"

                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dimen_35"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@drawable/shape_button_red"
                android:gravity="center"
                android:padding="@dimen/dimen_10"
                android:text="验证"
                android:textColor="@color/white"
                android:textSize="@dimen/size_14" />


        </LinearLayout>

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dimen_20"
            android:src="@drawable/login_close" />


    </RelativeLayout>

</RelativeLayout>