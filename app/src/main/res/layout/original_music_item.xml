<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_75"
    app:cardElevation="0dp"
    android:descendantFocusability="blocksDescendants"
    app:cardUseCompatPadding="false"
    app:cardCornerRadius="@dimen/dimen_5">


    <LinearLayout
        android:id="@+id/llToNext"
        android:background="@color/background_material_light_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/dimen_75"
            android:layout_height="@dimen/dimen_75">

            <ImageView
                android:id="@+id/iv_bcg"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="centerCrop"
                android:src="@drawable/helper_yxy" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="27dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/home_musi_type_txt"
                android:gravity="center"
                android:text="原创"
                android:textColor="@color/white"
                android:textSize="@dimen/size_10"


                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/size_14"
                    />

            </RelativeLayout>


            <TextView
                android:id="@+id/nickName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dimen_5"
                android:text=""
                android:textColor="#9da2a6"
                android:textSize="@dimen/size_12"

                />

            <TextView
                android:id="@+id/tv_counts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dimen_8"
                android:drawableLeft="@drawable/msg_center_listen_num"
                android:drawablePadding="@dimen/dimen_5"
                android:text="1009"
                android:textColor="#999999"
                 android:textSize="@dimen/size_11" />

            <ImageView
                android:id="@+id/ivMore"
                android:layout_marginRight="@dimen/dimen_15"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/tv_counts"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_15"
                android:src="@drawable/icon_index_list_more" />

            <ImageView
                android:id="@+id/original_img"
                android:layout_marginRight="@dimen/dimen_13"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/rl"
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:src="@mipmap/icon_index_list_mv" />

            <RelativeLayout
                android:background="@color/background_material_light_1"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">


            </RelativeLayout>



        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

