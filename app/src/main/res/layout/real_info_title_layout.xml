<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigationBarRl"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:minHeight="@dimen/dimen_40">

    <Button
        android:id="@+id/finish"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/icon_back_black"
        android:drawablePadding="@dimen/dimen_2"
        android:gravity="left|center_vertical"
        android:textColor="@color/white"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/headerViewGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            style="@style/BarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="实名认证" />

        <TextView
            android:visibility="gone"
            android:id="@+id/step_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="(1/3)"
            android:textColor="@color/grey_a6_text"
            android:textSize="@dimen/size_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/bt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_10"
        android:background="@color/white"
        android:clickable="true"
        android:text="下一步"
        android:textColor="@color/base_red"
        android:textSize="14sp"
        android:visibility="gone" />

    <View
        style="@style/view_line_h"
        android:layout_alignParentBottom="true" />

</RelativeLayout>