<?xml version="1.0" encoding="utf-8"?>
<com.mxkj.yuanyintang.widget.SquareRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <com.mxkj.yuanyintang.utils.photopicker.widget.BGAImageView
        android:id="@+id/iv_item_photo_picker_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        app:bga_iv_square="true"
        tools:src="@drawable/nothing" />

    <ImageView
        android:id="@+id/iv_item_photo_picker_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:src="@mipmap/weixuanzhong" />


    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        tools:background="#3000"
        android:src="@drawable/img_selected"

        />
    <TextView
        android:id="@+id/tv_item_photo_picker_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:textSize="14sp"
        android:text="3"
        android:textColor="@color/white"
        android:padding="@dimen/dimen_2"
        android:layout_marginRight="@dimen/dimen_2"
        />


</com.mxkj.yuanyintang.widget.SquareRelativeLayout>