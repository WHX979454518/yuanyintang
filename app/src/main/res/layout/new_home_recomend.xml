<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/llYxyRecommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_yxy"
            android:layout_width="@dimen/dimen_35"
            android:layout_height="@dimen/dimen_44"
            android:src="@drawable/home_yuanxiaoyi" />

        <TextView
            android:id="@+id/tv_yxy"
            android:layout_width="@dimen/dimen_290"
            android:layout_height="@dimen/dimen_32"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:paddingLeft="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_10"
            android:background="@drawable/shape_home_change_bcg"
            android:text="源小伊：有些歌听了，就像过完了一生"
            android:textColor="#1a1717"
            android:textSize="@dimen/size_13"

            />


    </LinearLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/cardAdItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_105"
        app:cardCornerRadius="@dimen/dimen_10"
        app:cardElevation="0dp"
        android:layout_marginTop="@dimen/dimen_10">

        <ImageView
            android:id="@+id/iv_ad_bck"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/helper_yxy" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3000" />


        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ad_type"
                android:textColor="@color/white"
                android:layout_width="@dimen/dimen_32"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="歌单"
                android:textSize="@dimen/size_11"
                android:background="@drawable/shape_home_recommend_type"

                />

            <TextView
                android:id="@+id/tv_ad_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_10"
                android:text="纵歌酌酒醉诗荫 — 古风歌中的酒与诗"
                android:textColor="@color/white"
                android:singleLine="true"
                android:textSize="@dimen/size_13"

                />


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>