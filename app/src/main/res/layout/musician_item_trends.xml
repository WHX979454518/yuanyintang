<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_14"
    android:paddingTop="@dimen/dimen_20">

    <TextView
        android:id="@+id/tv_ta_dynamic"
        style="@style/color_17_size_13"
        android:layout_marginBottom="@dimen/dimen_16"
        android:layout_marginLeft="@dimen/dimen_10"
        android:drawableLeft="@drawable/icon_ta_dynamic"
        android:drawablePadding="@dimen/dimen_10"
        android:gravity="center_vertical"
        android:text="TA的动态"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_8">

            <ImageView
                android:id="@+id/civ_headimg"
                android:layout_width="@dimen/dimen_35"
                android:layout_height="@dimen/dimen_35"
                android:layout_marginRight="@dimen/dimen_3"
                android:background="@drawable/default_head_img"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_is_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/civ_headimg"
                android:layout_alignRight="@id/civ_headimg"
                android:layout_marginRight="-3dp"
                android:src="@drawable/icon_headimg_vip_small" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_nickname"
            style="@style/color_4c_size_13"
            android:text="11111" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_contents"
        style="@style/color_17_size_14"
        android:layout_margin="@dimen/dimen_10"
        android:lineSpacingMultiplier="1.2"
        android:text="" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/img_recycierview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_5"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_5"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <RelativeLayout
        android:id="@+id/layout_source"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55"
        android:layout_marginBottom="@dimen/dimen_16"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:background="@drawable/oval_left_28dp_f5_bg">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="@dimen/dimen_55"
            android:layout_height="@dimen/dimen_55"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_defaulft" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_cover" />

        <TextView
            android:id="@+id/tv_label"
            style="@style/color_ping_99_size_11"
            android:layout_above="@id/view"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_toRightOf="@+id/iv_cover"
            android:background="@drawable/oval_3dp_pink_99_line"
            android:paddingBottom="@dimen/dimen_2"
            android:paddingLeft="@dimen/dimen_5"
            android:paddingRight="@dimen/dimen_5"
            android:paddingTop="@dimen/dimen_2"
            android:text="" />

        <TextView
            android:id="@+id/tv_source_title"
            style="@style/color_17_size_12"
            android:layout_above="@id/view"
            android:layout_marginLeft="@dimen/dimen_6"
            android:layout_marginRight="@dimen/dimen_44"
            android:layout_toRightOf="@+id/tv_label"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/dimen_2"
            android:paddingTop="@dimen/dimen_2"
            android:text="" />

        <TextView
            android:id="@+id/tv_source_nickname"
            style="@style/color_a6_size_11"
            android:layout_below="@+id/view"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_44"
            android:layout_toEndOf="@+id/iv_cover"
            android:layout_toRightOf="@+id/iv_cover"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="" />

        <ImageView
            android:id="@+id/iv_player_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:padding="@dimen/dimen_10"
            android:src="@drawable/dynamic_unplaying" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/grey_a6_text"
            android:textSize="@dimen/size_11" />

        <TextView
            android:id="@+id/tv_disagree_num"
            style="@style/color_a6_size_11"
            android:layout_marginRight="@dimen/dimen_20"
            android:drawableLeft="@drawable/disagree"
            android:drawablePadding="@dimen/dimen_4"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dimen_4"
            android:paddingTop="@dimen/dimen_4"
            android:text="0" />

        <TextView
            android:id="@+id/tv_read_num"
            style="@style/color_a6_size_11"
            android:drawableLeft="@drawable/comment"
            android:drawablePadding="@dimen/dimen_4"
            android:gravity="center_vertical"
            android:text="0" />

    </LinearLayout>

</LinearLayout>