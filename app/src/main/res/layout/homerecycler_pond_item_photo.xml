<?xml version="1.0" encoding="utf-8"?>
<com.mxkj.yuanyintang.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/tv_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44444444"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:text="查看更多"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:visibility="gone" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_long_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dimen_3"
        android:background="@drawable/shape_long_pic"
        android:padding="@dimen/dimen_3"
        android:text="长图"
        android:textColor="@color/white"
        android:textSize="@dimen/size_10" />

</com.mxkj.yuanyintang.widget.SquareRelativeLayout>