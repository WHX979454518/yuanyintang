<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bck"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3000" />

    <com.mxkj.yuanyintang.widget.CircleProgressBar
        android:id="@+id/progressbar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:roundProgressColorBar="@color/white"
        app:textColorBar="@color/white"
        android:layout_centerInParent="true"
        app:textSizeBar="@dimen/size_12"
        app:roundWidthBar="4dp"
         />

    <com.mxkj.yuanyintang.widget.largeImage.LargeImageView
        android:id="@+id/photo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        />

    <com.github.chrisbanes.photoview.PhotoView
        android:visibility="gone"
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_centerInParent="true" />

</RelativeLayout>