<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/layout_updata_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimen_42"
        android:layout_marginRight="@dimen/dimen_42">

        <LinearLayout
            android:id="@+id/layout_updata_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_85"
            android:background="@drawable/oval_5dp_white_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_22"
                android:text="甜甜圈冲榜"
                android:textColor="@color/color_17_text"
                android:textSize="@dimen/size_15" />


            <RadioGroup
                android:id="@+id/radiogrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_20"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="@dimen/dimen_5"
                    android:layout_weight="1"
                    android:background="@drawable/selector_choose_tag"
                    android:button="@null"
                    android:gravity="center"
                    android:text="1个"
                    android:textColor="@color/base_red" />

                <RadioButton
                    android:id="@+id/rb_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5"
                    android:layout_weight="1"
                    android:background="@drawable/selector_choose_tag"
                    android:button="@null"
                    android:gravity="center"
                    android:text="2个"
                    android:textColor="@color/base_red" />

                <RadioButton
                    android:id="@+id/rb_three"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5"
                    android:layout_weight="1"
                    android:background="@drawable/selector_choose_tag"
                    android:button="@null"
                    android:gravity="center"
                    android:text="5个"
                    android:textColor="@color/base_red" />


            </RadioGroup>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10"
                android:gravity="center"
                android:text="你今天还可以冲榜0次"
                android:textColor="@color/login_gray"
                android:textSize="@dimen/size_11" />


            <TextView
                android:id="@+id/tv_go"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:background="@drawable/shape_button_red"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_10"
                android:paddingTop="@dimen/dimen_10"
                android:text="去冲榜"
                android:clickable="true"
                android:textColor="@color/white_text"
                android:textSize="@dimen/size_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="当前甜甜圈剩余0个"
                    android:padding="@dimen/dimen_10"
                    android:textColor="#666161"
                    android:textSize="@dimen/size_11" />

                <TextView
                    android:id="@+id/tv_get_more"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="@dimen/dimen_10"
                    android:text="赚取更多？"
                    android:clickable="true"

                    android:textColor="#4ca6ff"
                    android:textSize="@dimen/size_11" />


            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/dimen_105"
            android:layout_height="@dimen/dimen_105"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_dialog_updata" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dimen_18"
            android:src="@drawable/icon_update_app_close" />


    </RelativeLayout>


</RelativeLayout>