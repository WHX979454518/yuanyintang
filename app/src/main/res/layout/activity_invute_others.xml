<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_invite_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_red"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_myIncode_Pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_20">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/base_red"
            android:padding="@dimen/dimen_5">

            <ImageView
                android:id="@+id/finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="@dimen/dimen_10"
                android:src="@drawable/icon_back_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="邀请好友"
                android:textColor="@color/white"
                android:textSize="@dimen/size_15"

                />

            <ImageView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dimen_15"
                android:padding="@dimen/dimen_10"
                android:src="@drawable/invite_share_white" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_title"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/bg_invite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_25"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/headImg"
                    android:layout_width="@dimen/dimen_50"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_25"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/tv_nickName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="@string/nickname"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/size_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:gravity="center"
                    android:text="恭喜您"
                    android:textColor="@color/base_red"
                    android:textSize="@dimen/size_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="已成功安利了"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/size_13" />

                    <TextView
                        android:id="@+id/inCodeNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/dimen_5"
                        android:text="0"
                        android:textColor="@color/base_red"
                        android:textSize="@dimen/size_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="位小伙伴"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/size_13" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/dimen_10"
                    android:text="源音塘·音乐不止一种\n
给想了解你的人一个机会\n
在源音塘\n
我们交付了彼此的\n
孤独"
                    android:textColor="@color/text_color"
                    android:textSize="13sp" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/savePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_share"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_20"
                android:clickable="true"
                android:src="@drawable/ima_save_incode" />

            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sina"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/share_sina"
                    android:gravity="center"
                    android:text="新浪"

                    />

                <TextView
                    android:id="@+id/wechat_moments"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/wechat_circle"
                    android:gravity="center"
                    android:text="朋友圈"

                    />

                <TextView
                    android:id="@+id/wechat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/login_wechat"
                    android:gravity="center"
                    android:text="微信" />

                <TextView
                    android:id="@+id/others"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/share_other"
                    android:gravity="center"
                    android:text="其他"

                    />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_myIncode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_save"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dimen_35"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_25">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="我的邀请码"
                android:textColor="@color/text_color"
                android:textSize="@dimen/size_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="(长按可复制)"
                android:textColor="@color/login_gray"
                android:textSize="@dimen/size_10" />

            <TextView
                android:id="@+id/tv_myIncode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_5"
                android:background="@drawable/shape_my_invite_code"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_30"
                android:paddingRight="@dimen/dimen_30"
                android:text=""
                android:textColor="@color/base_red"
                android:textSize="@dimen/size_16"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/share_layout_new" />
</RelativeLayout>