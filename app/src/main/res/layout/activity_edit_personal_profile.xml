<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_254">

            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_color"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_254"
                android:background="#44000000" />

            <RelativeLayout
                style="@style/NavigationBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48"
                android:layout_marginTop="@dimen/dimen_24">

                <Button
                    android:id="@+id/leftBT"
                    style="@style/BarButton"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="0"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/icon_back_white"
                    android:drawablePadding="@dimen/dimen_2"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_14"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/rightBT"
                    style="@style/BarButton"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:textAllCaps="false"
                    android:textColor="@color/base_red"
                    android:textSize="@dimen/size_14"
                    android:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_select_headimg"
                android:layout_width="@dimen/dimen_70"
                android:layout_height="@dimen/dimen_70"
                android:layout_centerInParent="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_headimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/default_head_img"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_camera" />

                <ImageView
                    android:id="@+id/iv_is_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_headimg_vip" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_4"
            android:background="@color/bg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_16"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingTop="@dimen/dimen_13">

            <TextView
                style="@style/color_17_size_14"
                android:text="昵称    " />

            <EditText
                android:id="@+id/et_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_6"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="true"
                android:hint="还没输入昵称哦~"
                android:maxLength="12"
                android:textColor="@color/color_66_text"
                android:textColorHint="@color/grey_a6_text"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            style="@style/view_line_h"
            android:layout_marginLeft="@dimen/dimen_15" />

        <LinearLayout
            android:id="@+id/layout_select_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_16"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingTop="@dimen/dimen_13">

            <TextView
                style="@style/color_17_size_14"
                android:text="性别    " />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_6"
                android:layout_weight="1"
                android:textColor="@color/color_66_text"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            style="@style/view_line_h"
            android:layout_marginLeft="@dimen/dimen_15" />

        <LinearLayout
            android:id="@+id/layout_select_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_16"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingTop="@dimen/dimen_13">

            <TextView
                style="@style/color_17_size_14"
                android:text="生日    " />

            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_6"
                android:layout_weight="1"
                android:textColor="@color/color_66_text"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            style="@style/view_line_h"
            android:layout_marginLeft="@dimen/dimen_15" />

        <LinearLayout
            android:id="@+id/layout_select_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_16"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingTop="@dimen/dimen_13">

            <TextView
                style="@style/color_17_size_14"
                android:text="所在地" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_6"
                android:layout_weight="1"
                android:textColor="@color/color_66_text"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            style="@style/view_line_h"
            android:layout_marginLeft="@dimen/dimen_15" />

        <LinearLayout
            android:paddingBottom="@dimen/dimen_16"
            android:paddingTop="@dimen/dimen_13"
            android:id="@+id/ll_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/color_17_size_14"
                android:layout_marginLeft="@dimen/dimen_15"
                android:text="简介" />

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tvIntro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dimen_10"
                android:drawableRight="@drawable/to_next_layout"
                android:gravity="right"
                android:text="朕还没想好怎么写呢~"
                android:textColor="#616466"
                android:textSize="@dimen/size_14"

                />

        </LinearLayout>

        <View
            style="@style/view_line_h"
            android:layout_marginLeft="@dimen/dimen_15" />

        <LinearLayout
            android:id="@+id/llLike"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:layout_marginRight="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/color_17_size_14"
                android:layout_marginLeft="@dimen/dimen_15"
                android:text="感兴趣的" />

            <TextView
                android:id="@+id/tvLike"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dimen_10"
                android:drawableRight="@drawable/to_next_layout"
                android:gravity="right"
                android:singleLine="true"
                android:ellipsize="end"
                android:text=""
                android:textColor="#616466"
                android:textSize="@dimen/size_14"

                />

        </LinearLayout>

        <View
            style="@style/view_line_h"
            android:layout_marginLeft="@dimen/dimen_15" />

        <LinearLayout
            android:id="@+id/llTag"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:layout_marginRight="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/color_17_size_14"
                android:layout_marginLeft="@dimen/dimen_15"
                android:text="身份标签" />

            <TextView
                android:id="@+id/tvTag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dimen_10"
                android:drawableRight="@drawable/to_next_layout"
                android:gravity="right"
                android:text=""
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#616466"
                android:textSize="@dimen/size_14"

                />

        </LinearLayout>

        <View
            style="@style/view_line_h"
            android:layout_marginLeft="@dimen/dimen_15" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>